# ===========================================
# ScamShield Agentic Honeypot - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ===========================================
# REQUIRED
# ===========================================

# Groq API Key (get from https://console.groq.com)
GROQ_API_KEY=gsk_your_groq_api_key_here

# ===========================================
# API CONFIGURATION
# ===========================================

# API Key for authenticating requests to this service
API_KEY=ss_live_your_api_key_here

# Environment: development, staging, production
ENVIRONMENT=development

# ===========================================
# DATABASE
# ===========================================

# SQLite database path (relative to project root)
DATABASE_URL=sqlite:///./data/scamshield.db

# ===========================================
# AGENTIC CONFIGURATION
# ===========================================

# Maximum conversation turns before auto-terminating session
MAX_TURNS=10

# Default persona if auto-selection fails
DEFAULT_PERSONA=elderly_victim

# Session timeout in seconds (default: 30 minutes)
SESSION_TIMEOUT_SECONDS=1800

# ===========================================
# MOCK SCAMMER API (Hackathon)
# ===========================================

# Mock Scammer API base URL (provided by hackathon organizers)
MOCK_SCAMMER_URL=https://mock-scammer.hackathon.ai

# Webhook secret for validating incoming requests
WEBHOOK_SECRET=your_webhook_secret_here

# ===========================================
# SECURITY
# ===========================================

# CORS allowed origins (comma-separated for multiple)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Rate limiting: requests per minute
RATE_LIMIT_RPM=60

# ===========================================
# LOGGING
# ===========================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable structured JSON logging
LOG_JSON=false

# ===========================================
# LLM CONFIGURATION
# ===========================================

# Groq model to use
GROQ_MODEL=llama-3.3-70b-versatile

# Temperature for response generation (0.0 - 1.0)
LLM_TEMPERATURE=0.7

# Maximum tokens for LLM response
LLM_MAX_TOKENS=1024
